generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")  // ← ОБОВ'ЯЗКОВО додати цей рядок!
}

model User {
  id        String         @id @default(cuid())
  email     String         @unique
  name      String?
  password  String
  subscriptions Subscription[]
  bookings  Booking[]
  
  @@map("users")
}

model Subscription {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  status     String   @default("active")
  remaining  Int      @default(0)
  startDate  DateTime?
  endDate    DateTime?
  duration   Int      @default(4)
  
  @@map("subscriptions")
}

model Class {
  id             String    @id @default(cuid())
  date           DateTime
  startTime      String
  endTime        String
  type           String
  subtype        String
  maxCapacity    Int
  currentBookings Int      @default(0)
  instructor     String
  location       String
  address        String?
  price          Float
  bookings       Booking[]
  
  @@map("classes")
}

model Booking {
  id       String   @id @default(cuid())
  userId   String
  classId  String
  status   String   @default("pending")
  createdAt DateTime @default(now())
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  class    Class    @relation(fields: [classId], references: [id], onDelete: Cascade)
  
  @@map("bookings")
}
