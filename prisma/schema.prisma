generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String      @id @default(cuid())
  email     String      @unique
  name      String?
  password  String
  subscriptions Subscription[]
  bookings  Booking[]
  
  @@map("users")  // Додайте для кращої сумісності
}

model Subscription {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  status     String
  remaining  Int
  startDate  DateTime?
  endDate    DateTime?
  duration   Int
  
  @@map("subscriptions")
}

model Class {
  id             String   @id @default(cuid())
  date           DateTime
  startTime      String
  endTime        String
  type           String
  subtype        String
  maxCapacity    Int
  currentBookings Int     @default(0)
  instructor     String
  location       String
  address        String?
  price          Float
  bookings       Booking[]
  
  @@map("classes")
}

model Booking {
  id       String   @id @default(cuid())
  userId   String
  classId  String
  status   String   @default("pending")
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  class    Class    @relation(fields: [classId], references: [id], onDelete: Cascade)
  
  @@map("bookings")
}
